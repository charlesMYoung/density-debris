---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
---

<script>
  import {
    argbFromHex,
    themeFromSourceColor,
    applyTheme,
  } from "@material/material-color-utilities";
  // Get the theme from a hex color
  const theme = themeFromSourceColor(argbFromHex("#ffdd77"), [
    {
      name: "custom-1",
      value: argbFromHex("#ffdd77"),
      blend: true,
    },
  ]);

  // Check if the user has dark mode turned on
  const systemDark = window.matchMedia("(prefers-color-scheme: dark)").matches;

  // Apply the theme to the body by updating custom properties for material tokens
  applyTheme(theme, { target: document.body, dark: systemDark });
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      @font-face {
        font-family: "smiley-sans";
        src: url("/fonts/SmileySans-Oblique.otf.woff2") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
  <body>
    <section class="flex h-screen flex-col bg-background">
      <Navigation />
      <main
        class="flex-1 w-full max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl mx-auto"
      >
        <slot />
      </main>
      <Footer />
    </section>
  </body>
</html>
